#!/bin/bash

set -eo pipefail

cd $(dirname "${BASH_SOURCE[0]}")/..

stack_version=${1:-"16"}
stack="heroku-$stack_version"

repo=github.com/sclevine/packs
docker run --rm -v "$(pwd)/..:/go/src/${repo}" "packs/${stack}-test" "${repo}/heroku/app"
docker run --rm --memory 100m -v "$(pwd)/..:/go/src/${repo}" "packs/${stack}-test" "${repo}/heroku/app" -memory 100
